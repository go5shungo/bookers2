<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h1 class="text-dark bg-light p-4 mb-0">User info</h1>
      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @user.errors.count %>件のerrorsが発生しました
            </h6>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :Name %><br>
          <%= f.text_field :Name, class: 'form-control' %>
          
          <div class="form-group">
          <%= f.label :Image%><br>
          <%= f.file_field :Image, accept:"image/*" %>
        </div>
        
       <div class="form-group">
          <%= f.label :Introduction %><br>
          <%= f.text_field :Introduction, class: 'form-control' %>
          
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>