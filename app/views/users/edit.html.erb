<div>
  <%= flash[:notice] %>
</div>
<div class = "container">
  <div class = "row">
<div class = "col-md-8 offset-md-1" >
      <h1 class="text-dark bg-light p-4 mb-0">User info</h1>
      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @user.errors.count %>件のerrorsが発生しました
            </h6>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
          
          <div class="form-group">
          <%= f.label :profile_image%><br>
          <%= f.file_field :profile_image, accept:"image/*" %>
        </div>
        
       <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_field :introduction, class: 'form-control' %>
          
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>